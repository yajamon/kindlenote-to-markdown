#!/bin/bash

# HTMLタグとその内容を改行区切りのトークン列のようなものと見なす
cat - | perl -pe 's/(<.*?>)/\n\1\n/g' | perl -pe 's/^\s*$//g' | ({

while read line
do
    if [[ $line =~ '<'html.*'>' ]]; then
        break
    fi
done

while read line
do
    # トークン列の処理系
    if [[ $line =~ '<'/[^\>]*'>' ]]; then
        if [[ $line =~ '<'/div.*'>' ]]; then
            echo
        fi
    elif [[ $line =~ '<'[^\>]*'>' ]]; then
        if [[ $line =~ '<'div.*'>' ]]; then
            echo
        fi
    else
        echo -n $line
    fi
done
})

